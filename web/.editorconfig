root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

# Svelte and JavaScript/TypeScript files
[*.{svelte,js,ts,jsx,tsx}]
indent_size = 2

# JSON, YAML and configuration files
[*.{json,yml,yaml}]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# CSS files
[*.{css,scss,sass}]
indent_size = 2
